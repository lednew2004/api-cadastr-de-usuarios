generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User{
  id String @id @default(uuid())
  name String
  cpf String @unique

  accumulatedValue Float @default(0)

  shopping Shopping[]
  
  @@map("users")
}

model Shopping {
  id String @id @default(uuid())
  value Float
  itens Json
  data DateTime @default(now())

  discountApplied Float @default(0)

  user User @relation(fields: [userid], references: [id])
  userid String

  @@map("shoppings")
}